{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@types": ["../types/types.ts"],
      "@api/*": ["../api/routes/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"]
}
